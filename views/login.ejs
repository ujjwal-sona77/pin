<% include ./partials/header.ejs %>

    <div class="w-full h-screen bg-no-repeat bg-center bg-cover bg-[url(https://images.unsplash.com/photo-1557264322-b44d383a2906?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mzh8fGFic3RhcmN0fGVufDB8MHwwfHx8MA%3D%3D)] flex items-center justify-center">
        <div class="w-[35vw] bg-white px-20 py-10 rounded-[30px]">
            <h1 class="text-4xl text-center font-semibold text-zinc-700 capitalize leading-none">Welcome To Printest
            </h1>
            <form action="/login" method="post">
                <% if(error.length> 0){ %>
                    <p class="error text-red-700 text-1xl font-semibold">
                        <%= error %>
                    </p>
                    <% } %>
                        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="username"
                            placeholder="Username.">
                        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="password" name="password"
                            placeholder="Password.">
                        <a class="inline-block mt-2 font-semibold text-zinc-500" href="#">Forgot the Password?</a>
                        <input
                            class="border-2 rounded-md mt-5 w-full px-3 py-2 bg-red-600 rounded-full text-white font-semibold"
                            type="submit" value="Login">
                        <p class="text-xs font-semibold text-zinc-700 mt-7 w-2/3 mx-auto text-center">By continuing, you
                            agree
                            to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy
                            Policy;
                            Notice at collection Opens a new tab.</p>
            </form>
        </div>
    </div>

    <% include ./partials/footer.ejs %>